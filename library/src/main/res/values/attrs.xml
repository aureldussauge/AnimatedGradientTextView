<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AnimatedGradientTextView">
        <attr name="colors" format="reference"/>
        <attr name="simultaneousColors" format="integer"/>
        <attr name="angle" format="integer"/>
        <attr name="speed" format="integer"/>
        <attr name="maxFPS" format="integer"/>
        <attr name="customFont" format="string"/>
    </declare-styleable>

    <array name="default_gradient_colors">
        <item>@color/materialRed</item>
        <item>@color/materialPink</item>
        <item>@color/materialPurple</item>
        <item>@color/materialDeepPurple</item>
        <item>@color/materialIndigo</item>
        <item>@color/materialBlue</item>
    </array>
</resources>